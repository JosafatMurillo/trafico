@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = null;
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/login.css"/>

<div class="split left">
    <img src="~/images/carrousel3.jpg" class="w-100 h-100"/>
</div>
<div class="split right">
    <form class="centered" method="post" action="/Home/Dashboard">
        <h1>Iniciar sesión</h1>
        <div class="form-group">
            <label for="exampleInputEmail1">Correo electrónico</label>
            <input type="text" name="username" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Contraseña</label>
            <input type="password" name="contrasena" class="form-control" id="contrasena" placeholder="Contraseña">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>